    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "SERVER_MODE": "True",
                "FOO": "bar"
            },
            "justMyCode": false
        },
        {
            "name": "control app - from file",
            "type": "python",
            "request": "launch",
            "program": "src/app.py",
            "env": {
                "SERVER_MODE": "True",
                "RASPBERRY_PI_HOST": "localhost",
                "STREAM_URI": "${fileWorkspaceFolder}/test/mh1.mp4",
                "OPENCV_FFMPEG_CAPTURE_OPTIONS": "rtsp_transport;udp | fflags;nobuffer | flag;low_delay",
                "FOO": "bar"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "control app",
            "type": "python",
            "request": "launch",
            "program": "src/app.py",
            "env": {
                "RASPBERRY_PI_HOST": "localhost",
                "OPENCV_FFMPEG_CAPTURE_OPTIONS": "rtsp_transport;udp | fflags;nobuffer | flag;low_delay"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "servoServer",
            "type": "python",
            "request": "launch",
            "program": "src/server.py",
            "env": {
                "PORT": "8000"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "camera test",
            "type": "python",
            "request": "launch",
            "program": "src/camera_only.py",
            "console": "integratedTerminal",
            "env": {
                "SERVER_MODE": "True",
                "FOO": "bar"
            },
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "servoServer and control app - from file",
            "configurations": [
                "servoServer",
                "control app"
            ]
        }
    ]
}