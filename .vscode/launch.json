    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "control app",
            "type": "python",
            "request": "launch",
            "program": "src/app.py",
            "env": {
                "SERVER_MODE": "True"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "servoServer",
            "type": "python",
            "request": "launch",
            "program": "src/server.py",
            "env": {
                "PORT": "8000"
            },
            "console": "integratedTerminal"
        },
    ],
    "compounds": [
        {
            "name": "servoServer and control app",
            "configurations": [
                "servoServer",
                "control app"
            ]
        }
    ]
}